<title>Register</title>
<div class="container">
	<h3 class="page-header">Account Sign Up</h3>

	<br>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
     {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
     {{/if}}
            	<form class="form-signup" method="post" action="/users/register">
                <!-- Name  -->
                <input type="text" class="form-control" name="name" placeholder="Name" required autofocus>
                <br>
                 <!-- UserName  -->
                <input type="text" class="form-control" name="username" placeholder="Username" required autofocus>
                <br>
                 <!-- Email ID  -->
                 <input type="text" class="form-control" name="email" placeholder="Email ID" required autofocus>
                 <br>
                 <!-- Password -->
                <input type="password" class="form-control" name="password" placeholder="Password" required>
                <br>
                <!-- Confirm Password -->
                <input type="password" class="form-control" name="password2" placeholder="Confirm Password" required>
                <br>
                <button class="btn btn-md btn-primary" type="submit">
                    Register </button>
                </span>
                </form>
            </div>
            <a href="/users/login" class="text-center new-account">Account Already Exists </a>
        </div>
    </div>
</div>
